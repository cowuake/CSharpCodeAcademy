<Window x:Class="Library.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.DesktopClient"
        xmlns:vm="clr-namespace:Library.DesktopClient.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="AppStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:BooksViewModel/>
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit">
                    <MenuItem.Icon>
                        <Image Source="/img/exit.PNG"/>
                    </MenuItem.Icon>
                </MenuItem>

            </MenuItem>

            <MenuItem Header="_Tools">
                <MenuItem Header="_Genres">
                    <MenuItem.Icon>
                        <Image Source="/img/exit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="?">
                <MenuItem Header="_Info">

                </MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel>
            <WrapPanel Margin="30">
                <Label Content="_ISBN"
                       Target=""
                       Margin="30,0,0,0"/>
                <TextBox x:Name="txtSearchIsbn" />

                <Label Content="_Title"
                       Target=""
                       Margin="30,0,0,0"/>
                <TextBox x:Name="txtSearchTitle"
                         Style="{Binding StaticResource searchTextBox}"/>

                <Button x:Name="searchBtn"
                        Margin="50,0,0,0"
                        Style="{StaticResource searchButton}"
                        Command="Search">
                    <StackPanel Orientation="Horizontal">
                        <TextBox>Search</TextBox>
                    </StackPanel>
                </Button>
            </WrapPanel>

            <DataGrid Margin="30"
                      ItemsSource="{Binding Books}"
                      CanUserSortColumns="False"
                      AutoGenerateColumns="False"
                      SelectionUnit="FullRow"
                      AlternatingRowBackground="AntiqueWhite"
                      AlternationCount="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ISBN"
                                        Width="150"
                                        Binding="{Binding Isbn}"/>

                    <DataGridTextColumn Header="Author"
                                        Width="150"
                                        Binding="{Binding Author}"/>

                    <DataGridTextColumn Header="Title"
                                        Width="150"
                                        Binding="{Binding Title}"/>

                    <DataGridTextColumn Header="Pages"
                                        Width="150"
                                        Binding="{Binding Pages}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </DockPanel>
</Window>