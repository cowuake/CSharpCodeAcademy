<Window x:Class="Library.DesktopClient.InsertBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.InsertBookWPF"
        mc:Ignorable="d"
        Title="Insert new boook" Height="380" Width="560"
        ResizeMode="NoResize"
        Background="AliceBlue">
    
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Foreground" Value="DarkGray"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="DarkRed"/>
            <Setter Property="BorderBrush" Value="AntiqueWhite"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
    </Window.Resources>

    <Window.CommandBindings>
        <!--<CommandBinding Command="command:CreateCommands.InsertCommand"
                        CanExecute="CommandBinding_Executed_Insert"
                        Executed="CommandBinding_CanExecute_Insert"/>

        <CommandBinding Command="ApplicationCommands.Replace"
                        Executed="CommandBinding_Executed_Replace"
                        CanExecute="CommandBinding_CanExecute_Replace"/>
        
        <CommandBinding Command="CreateCommands.Exit"
                        Executed="CommandBinding_Executed_Exit"
                        CanExecute="CommandBinding_CanExecute_Exit"/>-->
    </Window.CommandBindings>

    <DockPanel>
        <StackPanel Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition>

                </ColumnDefinition>

                <ColumnDefinition>

                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label>ISBN</Label>
            <TextBox x:Name="tbxISBN"
                     Grid.Row="0"
                     Grid.Column="1">
            </TextBox>

            <Label Grid.Row="1"
                   Grid.Column="0">
                Title
            </Label>
            <TextBox x:Name="tbxTitle"
                     Grid.Row="1"
                     Grid.Column="1">
            </TextBox>

            <Label Grid.Row="2"
               Grid.Column="0">
                Authors
            </Label>
            <TextBox x:Name="tbxAuthor"
                     Grid.Row="2"
                     Grid.Column="1">
            </TextBox>

            <Label Grid.Row="3"
                   Grid.Column="0">
                Genre
            </Label>
            <ComboBox x:Name="cbGenre"
                      Grid.Row="3"
                      Grid.Column="1"
                      Margin="0,10,0,0"
                      SelectedValuePath="Id"
                      DisplayMemberPath="Name">
            </ComboBox>

            <Label Grid.Row="4"
                   Grid.Column="0">
                Summary
            </Label>
            <TextBox x:Name="tbxSummary"
                     Grid.Row="4"
                     Grid.Column="1"
                     Height="120"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap">
            </TextBox>

            <Label Grid.Row="5"
               Grid.Column="0">
                Pages
            </Label>
            <TextBox x:Name="tbxPages"
                     Grid.Row="5"
                     Grid.Column="1">
            </TextBox>
        </Grid>

        <Separator Margin="0,10,0,10">

        </Separator>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Click="ResetClick"
                    Background="Yellow">
                Reset
            </Button>

            <Button Click="InsertClick"
                    Background="LightGreen">
                Insert book
            </Button>
        </StackPanel>
    </StackPanel>
    </DockPanel>
    
</Window>