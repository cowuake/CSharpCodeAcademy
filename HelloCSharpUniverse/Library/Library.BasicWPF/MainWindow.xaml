<Window x:Class="Library.BasicWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.BasicWPF"
        mc:Ignorable="d"
        Title="Hello, WPF!" Height="450" Width="800">
    <StackPanel x:Name="mainPanel"
                Margin="20">
        <TextBlock x:Name="textOutput"
                   Margin="20"
                   FontFamily="Cascadia Code" FontSize="30"
                   TextAlignment="Center" HorizontalAlignment="Center"
                   Foreground="Orange"
                   Background="CadetBlue">
            Hello, WPF!
        </TextBlock>

        <Button x:Name="bindButton"
                Width="200"
                Margin="0,30,0,0"
                Height="50"
                Click="Button_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock Background="AntiqueWhite"
                           Margin="10,0,0,0">
                    We are
                </TextBlock>
                <TextBlock Background="Azure"
                           Margin="10,0,0,0">
                    a button
                </TextBlock>
            </StackPanel>
        </Button>
        
        <TextBlock x:Name="textInput"
                   Margin="0,30,0,0">
            I am a textbox
        </TextBlock>

        <TextBlock x:Name="pointerCoords"
                   Width="100px"
                   Height="30px">
            
        </TextBlock>

        <Button x:Name="resetButton"
                Width="100"
                Background="OrangeRed"
                Foreground="AntiqueWhite"
                Margin="0,30,0,0"
                BorderBrush="Aqua"
                BorderThickness="3"
                Click="Button_Click">
            Reset
        </Button>
    </StackPanel>
</Window>