@using Library.MVC.Models.Library
@model CreateEditBookViewModel
@{
    ViewData["Title"] = "Insert a book";
}

<h1>
    Insert a book
</h1>

<form asp-action="Create" asp-controller="Library">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row form-group">
        <label asp-for="ISBN" class="col-sm-4 control-label text-sm-right"></label>
        <div class="col-sm-8">
            <input required asp-for="ISBN" class="form-control" />
            <span asp-validation-for=ISBN class="text-danger"></span>
        </div>
    </div>
    
    <partial name="_Form" model=Model />

    <div class="row">
        <div class="col">
            <a class="btn btn-warning" href="@Url.Action("Index")">
                Cancel
            </a>
            <input type="submit" value="Insert book" class="btn btn-success"/>
        </div>
    </div>
</form>