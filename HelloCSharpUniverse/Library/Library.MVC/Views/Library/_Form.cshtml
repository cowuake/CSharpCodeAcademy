@using Library.MVC.Models.Library
@model CreateEditBookViewModel

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Title" class="control-label"></label>
        </div>
        <div class="col-sm-8">
            <input required asp-for="Title" class="form-control" />
            <span asp-validation-for=Title class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Author" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input required asp-for="Author" class="form-control" />
            <span asp-validation-for=Author class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Summary" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input asp-for="Summary" class="form-control" />
            <span asp-validation-for=Summary class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Pages" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input asp-for="Pages" class="form-control" />
            <span asp-validation-for=Pages class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Publisher" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input asp-for="Publisher" class="form-control" />
            <span asp-validation-for=Publisher class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Year" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for=Year class="text-danger"></span>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Edition" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input asp-for="Edition" class="form-control" />
            <span asp-validation-for=Edition class="text-danger"></span>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Language" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input asp-for="Language" class="form-control" />
            <span asp-validation-for=Language class="text-danger"></span>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Note" class="control-label text-sm-right"></label>
        </div>
        <div class="col-sm-8">
            <input asp-for="Note" class="form-control" />
            <span asp-validation-for=Note class="text-danger"></span>

        </div>
    </div>

    <div class="row form-group">
        <label asp-for=BookGenreId class="col-sm-4 custom-control-label text-sm-right"></label>
        <div class="col-sm-8">
            @Html.DropDownListFor(b => b.BookGenreId, Model.AvailableCategories, new { @class="form-control", required="required"})
            <span asp-validation-for=BookGenreId class="text-danger"></span>
        </div>
    </div>