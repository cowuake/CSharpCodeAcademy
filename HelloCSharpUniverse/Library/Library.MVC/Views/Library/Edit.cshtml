@using Library.MVC.Models.Library
@model CreateEditBookViewModel
@{
    ViewData["Title"] = "Edit book info (" + @Model.ISBN + ")";
}

<h1>
    Edit book info
</h1>

<form asp-action="Edit" asp-controller="Library">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="ISBN" class="control-label"></label>
        </div>
        <div class="col-sm-8">
            <input required asp-for="ISBN" class="form-control" />
            <span asp-validation-for=ISBN class="text-danger"></span>
        </div>
    </div>
    
    <partial name="_Form" model=@Model />

    <div class="row">
        <div class="col">
            <a class="btn btn-warning" href="@Url.Action("Index")">
                Cancel
            </a>
            <input type="submit" value="Update" class="btn btn-success"/>
        </div>
    </div>
</form>