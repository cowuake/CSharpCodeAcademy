@using Library.MVC.Models.BookGenres
@model DetailsBookGenreViewModel

@{
    ViewData["Title"] = "Book genre details (" + Model.Id + ")";
}
<h1>
    Details for book genre @Model.Id
</h1>


<div class="row">
    <div class="col-md-5 col-xl-3 text-md-right font-weight-bold">
        @Html.DisplayNameFor(m => m.Id)
    </div>
    <div class="col-md-7 col-xl-9">
        @Html.DisplayFor(m => m.Id)
    </div>
</div>

<div class="row">
    <div class="col-md-5 col-xl-3 text-md-right font-weight-bold">
        @Html.DisplayNameFor(m => m.Name)
    </div>
    <div class="col-md-7 col-xl-9">
        @Html.DisplayFor(m => m.Name)
    </div>
</div>

<div class="row">
    <div class="col-md-5 col-xl-3 text-md-right font-weight-bold">
        @Html.DisplayNameFor(m => m.Books)
    </div>
    <div class="col-md-7 col-xl-9">
        @if (Model.Books.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ISBN</th>
                        <th>Title</th>
                        <th>Author</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var book in Model.Books)
                    {
                        <tr>
                            <td>@book.ISBN</td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                        </tr>
                    }
                </tbody>
            </table>
        } else
        {
            <p class="text-warning">
                No books under this category
            </p>
        }
    </div>
</div>


<div class="row">
    <div class="col-sm-6 text-sm-right">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id=@Model.Id>
            Modify
        </a>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-info" href='@Url.Action("Index")'>
            Back to list
        </a>
    </div>
</div>