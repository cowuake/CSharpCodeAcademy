@using Library.MVC.Models.Account
@model RegisterAccountViewModel

@{
    ViewData["Title"] = "RegisterAccount";
}

<h1>Register account</h1>
<hr />

<form asp-action="Register" id="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row form-group">
            <label asp-for=Username class="col-sm-4 control-label text-sm-right"></label>
        <div class="col-sm-8 ">
            <input required asp-for=Username class="form-control"/>
            <button id="checkUsernameBtn" type="button">
                ✓
            </button>
            <span asp-validation-for=Username class="text-danger" id="UsernameVal"></span>
        </div>
    </div>

    <div class="row form-group">
            <label asp-for=Password class="col-sm-4 control-label text-sm-right"></label>
        <div class="col-sm-8 ">
            <input required asp-for=Password class="form-control"/>
            <span asp-validation-for=Password class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
            <label asp-for=ConfirmPassword class="col-sm-4 control-label text-sm-right"></label>
        <div class="col-sm-8 ">
            <input required asp-for=ConfirmPassword class="form-control"/>
            <span asp-validation-for=ConfirmPassword class="text-danger"></span>
        </div>
    </div>
    
    <hr />
    <div class="row">
        <div class="col text-right">
            <a class="btn btn-warning" href="@Url.Action("Index", "Home")">
                Cancel
            </a>
            <button type="submit" class="btn btn-success">
                Confirm
            </button>
        </div>
    </div>
</form>

@section scripts {
    <script>
        function checkUsernameAvailability() {
            const username = document.getElementById('Username');

            if (!username) {
                return;
            }

            $.ajax({
                url: '@Url.Action("CheckUsernameAvailability")',
                type: 'GET',
                data: {
                    user: username
                    }
                },
                success: function(data) {
                    if (!data) {
                        $('#UsernameVal').addClass('text-danger');
                        $('#UsernameVal').html('Username already in use!');
                    } else {
                        $('#UsernameVal').removeClass('text-danger').addClass('text-success');
                        $('#UsernameVal').html('Username available');
                    }
                },
                dataType: 'json'
            })
        }
    </script>
}