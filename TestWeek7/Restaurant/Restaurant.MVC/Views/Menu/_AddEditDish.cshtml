@using Restaurant.MVC.Models.Menu
@model AddEditDishViewModel

    <div class="row form-group">
        <label asp-for=Name class="col-sm-4 control-label text-sm-right"></label>
        <div class="col-sm-8">
            <input required asp-for="Name" class="form-control" />
            <span asp-validation-for=Name class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for=Type class="col-sm-4 control-label text-sm-right"></label>
        <div class="col-sm-8">
            @Html.DropDownListFor(d => d.Type, Model.AllowedDishTypes, "=== [ SELECT DISH TYPE ] ===", new { @class="form-control", required="required"})
            <span asp-validation-for=Type class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for=Price class="col-sm-4 control-label text-sm-right"></label>
        <div class="col-sm-8">
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for=Type class="text-danger"></span>
        </div>
    </div>